        xmlns:local="clr-namespace:XMLViewer" x:Class="XMLViewer.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Select file" HorizontalAlignment="Left" Margin="403,10,0,0" VerticalAlignment="Top" Width="75" Click="LoadXML" Height="24"/>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Height="23" Margin="96,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" IsReadOnly="True" />
        <Label Content="XML file:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="24" Width="81"/>

        <local:XMLView x:Name="treeview" HorizontalAlignment="Left" Height="258" Margin="10,51,0,0" VerticalAlignment="Top" Width="497"/>

    </Grid>
</Window>
