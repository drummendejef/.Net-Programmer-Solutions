<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Multithreading" x:Class="Multithreading.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnCounter1" Content="Counter #1" HorizontalAlignment="Left" Margin="110,124,0,0" VerticalAlignment="Top" Width="120" Click="StartCounter"/>
        <Button x:Name="btnCounter2" Content="Counter #2" HorizontalAlignment="Left" Margin="277,124,0,0" VerticalAlignment="Top" Width="120" Click="StartCounter"/>

        <local:TellerTextBox x:Name="txtCounter1" Text=""  HorizontalAlignment="Left" Height="23" Margin="110,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <local:TellerTextBox x:Name="txtCounter2" HorizontalAlignment="Left" Height="23" Margin="277,149,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <Button x:Name="btnChangeThreading" Content="Change threading" HorizontalAlignment="Left" Margin="110,80,0,0" VerticalAlignment="Top" Width="120" Click="changeThreading"/>
        <TextBlock x:Name="txtThreading" HorizontalAlignment="Left" Margin="277,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="16" Width="120"/>

    </Grid>
</Window>
