<Window x:Class="Pagination.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="360" Width="608">
    <Grid Height="auto" Width="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="data" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="First" Height="30" Width="150" Click="first_Click" />
            <Button Content="Previous" Height="30" Width="150" Click="prev_Click" />
            <Button Content="Next" Height="30" Width="150" Click="next_Click" />
            <Button Content="Last" Height="30" Width="150" Click="last_Click" />
            <!--
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label x:Name="page" Width="350"/>
            <TextBox x:Name="selectPage" Width="100" Padding="5"/>
            <Button Content="go to chosen page" Click="gotoPage_Click" Width="150"/>-->
        </StackPanel>
    </Grid>
</Window>
