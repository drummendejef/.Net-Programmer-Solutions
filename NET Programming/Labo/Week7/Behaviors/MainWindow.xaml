<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:local="clr-namespace:Behaviors" 
        x:Class="Behaviors.MainWindow"
    
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Button HorizontalAlignment="Left" Margin="140,80,0,0" VerticalAlignment="Top" Content="Deze werkt niet" Padding="5">
            <i:Interaction.Behaviors>
                <local:BehaviorDrag/>
            </i:Interaction.Behaviors>
        </Button>
        <TextBlock Background="#FFC3C3F5" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100">
			<i:Interaction.Behaviors>
				<local:BehaviorDrag/>
			</i:Interaction.Behaviors>
        </TextBlock>


        <TextBlock Background="LightBlue" local:BehaviorDragDP.Drag="True" Height="50" Width="250" Text="Drag me around! (Attached Behavior)" Margin="40,132,227,137" />
        <TextBlock Background="LightBlue" local:BehaviorDragDP.Drag="False" Width="300" Height="50" Text="Can't drag me around :( (Attached Behavior)" Margin="180,211,37,58" />
        <Button Content="Drag me button (AB)"  local:BehaviorDragDP.Drag="True" Canvas.Left="302" Canvas.Top="48" Width="auto" Padding="5"/>
    </Canvas>
</Window>
