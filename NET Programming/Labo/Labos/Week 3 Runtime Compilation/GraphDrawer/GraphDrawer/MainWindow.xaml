<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GraphDrawer" x:Class="GraphDrawer.MainWindow"
        Title="Graph Drawer" Height="350" Width="525" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <local:GraphCanvas x:Name="graphCanvas"/>
        <TextBox Text="System.Math.Sin(x)" Grid.Row="1" x:Name="txtFunction" HorizontalAlignment="Stretch" Margin="0,0,100,0" />
        <Button Grid.Row="1" Content="Draw" Width="100" HorizontalAlignment="Right" Click="Button_Click" />
    </Grid>
</Window>
