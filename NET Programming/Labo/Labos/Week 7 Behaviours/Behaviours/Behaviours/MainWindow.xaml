<Window x:Class="Behaviours.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Behaviours"
        xmlns:e="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Draggable button" Width="300" Height="100">
            <e:Interaction.Behaviors>
                <local:DragBehaviour />
            </e:Interaction.Behaviors>
        </Button>

        <Button Content="Grip" Width="50" Height="50" Margin="0,200,0,0">
            <e:Interaction.Behaviors>
                <local:GripBehaviour />
            </e:Interaction.Behaviors>
        </Button>
        
        <Button Content="Dep prop drag" Width="300" Height="30" Margin="0,-200,0,0" 
                local:DragDependencyProperty.IsDraggable="True" />

        <Button Content="Resize" Width="200" Height="30" Margin="0,-150,0,0" HorizontalAlignment="Right" >
            <e:Interaction.Behaviors>
                <local:ResizeBehavior />
            </e:Interaction.Behaviors>
        </Button>
                
    </Grid>
</Window>
