<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:src="clr-namespace:NQueens" x:Class="NQueens.MainWindow"
        Title="N Queens" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <xctk:IntegerUpDown Name="intUpDown"  />

        <src:NQueensUC src:NQueensUC.GridSize="{Binding Value, ElementName=intUpDown}"  Grid.Row="1" x:Name="nQueens" />
        
    </Grid>
</Window>
