<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sudoku" x:Class="Sudoku.MainWindow"
        Title="Sudoku" Height="450" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
            <Button Content="Create Task" Click="btnCreateTask_Click" VerticalAlignment="Center" 
                HorizontalAlignment="Left" Height="40" Width="151"/>
            <Button Content="Save Task" Name="btnSaveTask" Click="btnSaveTask_Click" Height="40" Width="80" 
                    Margin="5,0,0,0" IsEnabled="False" />
            <Button Content="Load Task" Name="btnLoadTask" Click="btnLoadTask_Click" Height="40" Width="80" 
                    Margin="5,0,0,0" />
        </StackPanel>
        
        <Button Content="Solve" Click="Button_Click" Height="40" Width="151" HorizontalAlignment="Right" 
                Margin="0,0,10,0" IsEnabled="False" Name="btnSolve" />

        <local:SudokuUC x:Name="ucSudoku"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </Grid>
</Window>
