<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:labo4_oef2" x:Class="labo4_oef2.MainWindow"
        Title="MainWindow" Height="610" Width="490">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Create Task" Click="btnCreateTask_Click" Margin="10"/>
        <Button Content="Solve" Click="btnSolve_Click" Margin="10" Grid.Column="1"/>
        <local:Bord Margin="10" Grid.Row="1" x:Name="cnvBord" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
