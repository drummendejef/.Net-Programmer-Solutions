<Window x:Class="iTextSharpNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Schrijf naar pdf" Margin="10" Name="btnSimplePDF" Click="btnSimplePDF_Click"/>
        <Button Content="Schalen" Margin="10" Name="btnExtra" Grid.Column="1" Click="btnExtra_Click"/>
        <Button Content="Merge" Margin="10" Name="btnMerge" Grid.Column="2" Click="btnMerge_Click" />
        <Button Content="Watermark" Margin="10" Name="btnWatermark" Grid.Column="0" Grid.Row="1" Click="btnWatermark_Click"/>
    </Grid>
</Window>
