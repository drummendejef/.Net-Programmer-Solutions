<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Universal" x:Class="Universal.MainWindow"
        Title="MainWindow" Height="350" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <local:Table Margin="5" Grid.Row="1" Grid.RowSpan="2" x:Name="lstTable"/>
        <local:Data Grid.Column="1" Margin="5" Grid.Row="1" Grid.RowSpan="2" x:Name="lstRow"/>
        <Button Grid.Column="2" Margin="5" Content="Up" x:Name="btnUp" Click="btnUp_Click" Grid.RowSpan="1" Grid.Row="1"/>
        <Button Grid.Column="2" Grid.Row="2" Margin="5" Content="Down" x:Name="btnDown" Click="btnDown_Click"/>
        <TextBlock Margin="5" Text="Database naam:"/>
        <TextBox Grid.Column="1" Margin="5" TextWrapping="Wrap" Text="labo6_extra" x:Name="txtDatabase"/>
        <Button Grid.Column="2" Margin="5" Content="Ophalen" x:Name="btnDatabase" Click="btnOphalen_Click"/>
    </Grid>
</Window>
