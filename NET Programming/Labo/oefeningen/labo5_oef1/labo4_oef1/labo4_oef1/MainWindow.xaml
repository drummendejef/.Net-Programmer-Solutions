<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:labo4_oef1"
    xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit" x:Class="labo4_oef1.MainWindow"
        Title="MainWindow" Height="600" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <local:Bord local:Bord.Size="{Binding Value, ElementName=iudAantal}" local:Bord.JDASize="6"  Margin="10" x:Name="cnvBord" Grid.Row="1" Grid.ColumnSpan="3"/>
        <TextBlock Margin="5" TextWrapping="Wrap" Text="Aantal koninginnen:" Grid.Column="0"/>
        <xctk:IntegerUpDown Value="4" Margin="5" Minimum="4" Maximum="45" Name="iudAantal" Grid.Column="1"/>
        <Button Content="Cancel" Grid.Column="0" Name="btnCancel" Click="btnCancel_Click" Margin="10"></Button>
    </Grid>
</Window>
