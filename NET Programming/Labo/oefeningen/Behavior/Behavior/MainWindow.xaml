<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="Behavior.MainWindow"
        xmlns:local="clr-namespace:Behavior"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Drag" Height="30" Margin="0,-250,0,0" Width="100">
            <i:Interaction.Behaviors>
                <local:DragControl/>
            </i:Interaction.Behaviors>
		</Button>
        <Button Content="Grip" Height="30" Margin="0,-150,0,0" Width="100">
            <i:Interaction.Behaviors>
                <local:DragWindow/>
            </i:Interaction.Behaviors>
        </Button>
        <Button Content="Resize" Height="30" Margin="0,-50,0,0" Width="100">
            <i:Interaction.Behaviors>
                <local:ResizeControl/>
            </i:Interaction.Behaviors>
        </Button>
        <Button Content="Drag Dependency" Height="30" Margin="0,50,0,0" Width="100" local:DragControlDependency.IsDraggable="True"/>
    </Grid>
</Window>
