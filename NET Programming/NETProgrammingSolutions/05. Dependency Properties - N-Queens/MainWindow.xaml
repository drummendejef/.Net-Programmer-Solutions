<Window x:Class="_05.Dependency_Properties___N_Queens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:_05.Dependency_Properties___N_Queens"
        Title="Dependency Properties: N-Queens" Height="600" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <local:Board Margin="10" x:Name="cnvBord" Grid.Row="1" Grid.ColumnSpan="3"/>
        <TextBlock Margin="5" TextWrapping="Wrap" Text="Aantal koninginnen:" Grid.Column="0"/>
        <xctk:IntegerUpDown Value="4" Margin="5" Minimum="4" Maximum="25" Name="iudAantal" Grid.Column="1"/>
        <Button Content="Start" Margin="5" x:Name="btnStart" Click="btnStart_Click" Grid.Column="2"/>
        <Button Content="Async" Margin="5" x:Name="btnAsync" Grid.Column="3" Click="btnAsync_Click"/>
    </Grid>
</Window>
