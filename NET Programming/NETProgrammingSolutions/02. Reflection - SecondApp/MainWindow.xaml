<Window x:Class="_02.Reflection___SecondApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="Fancy button!" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="25" Click="Button_Click" Margin="25" />
        <Separator Margin="5" />
        <TextBox Margin="5" Padding="5" x:Name="txtVoornaam" />
        <TextBox Margin="5" Padding="5" x:Name="txtAchternaam" />
        <TextBox Margin="5" Padding="5" x:Name="txtLeeftijd" />
        <Button Content="Send" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" Click="Button_Send"/>
    </StackPanel>
</Window>
