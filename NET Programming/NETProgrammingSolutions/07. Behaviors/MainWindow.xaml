<Window x:Class="_07.Behaviors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_07.Behaviors"
        xmlns:src="_07.Behaviors.Properties"
        xmlns:e="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="Behaviors" Height="350" Width="525">
    <Grid>
        <Button Content="Draggable button" Width="300" Height="100">
            <e:Interaction.Behaviors>
                <local:DragBehaviour />
            </e:Interaction.Behaviors>
        </Button>

        <Button Content="Grip" Width="50" Height="50" Margin="0,200,0,0">
            <e:Interaction.Behaviors>
                <local:GripBehavior />
            </e:Interaction.Behaviors>
        </Button>

        <Button Content="Dep prop drag" Width="300" Height="30" Margin="0,-200,0,0" 
                local:DragBehaviorDependencyProperty.IsDraggable="True" />

        <Button Content="Resize" Width="50" Height="30" Margin="0,-150,0,0" >
            <e:Interaction.Behaviors>
                <local:ResizeBehavior />
            </e:Interaction.Behaviors>
        </Button>

    </Grid>
</Window>
