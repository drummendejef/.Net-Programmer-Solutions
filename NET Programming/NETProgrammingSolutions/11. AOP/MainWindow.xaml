<Window x:Class="_11.AOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AOP" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Name="lblFibonacci" Width="200" Height="30" Margin="0,0,0,10" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Enter a value between 0 and 100:" VerticalAlignment="Center" />
                <TextBox Name="txtValue" Height="30" Width="200" TextChanged="txtValue_TextChanged" />
            </StackPanel>

            <TextBlock Name="lblRangeException" Foreground="Red" />

            <DatePicker Margin="0,20,0,0" CalendarClosed="DatePicker_CalendarClosed"/>
            <TextBlock Name="lblAgeException" Foreground="Red" />

            <Button Content="Am I administrator?" Margin="0,10,0,0" Width="200" Click="Button_Click" />
            <TextBlock Name="lblAdmin" Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>
